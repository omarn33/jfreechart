/**
* Draws a PieChart based on the given parameters
* @param dataset: the dataset to be used to graph the chart
*/
public void drawPieChart(Dataset data) {
    // Solving the text label overlap issues

    // Iterate through all the categories to determine where the text label should be drawn
    for(int i = 0; i < data.length; i++)
    {
            if(data.category < 0.05) {
                // if the wedge is less than 5%, draw the label outside the Pie Chart
                drawLabels(true);
            }
            else {
                // Draw the label inside the chart
                drawLabel(false);
            }
    }

    // Plot the PieChart
}

/**
* Tests whether the appropriate dataset produces labels inside or outside the Pie Chart respectively
*/
@Test
public void testLabelInsidePieChart() {
    // Create two datasets
    Dataset data = new Dataset();
    data.add("Soccer", 55);
    data.add("Hockey", 10);
    data.add("Football", 25);
    data.add("Tennis", 10);
    data.add("Badminton", 5);

    // The labels should all be within the PieChart
    Dataset data1 = new Dataset();
    data1.add("Soccer", 55);
    data1.add("Hockey", 10);
    data1.add("Football", 25);
    data1.add("Tennis", 10);
    data1.add("Badminton", 5);

    // Create two PieCharts
    Chart piechart = new Chart();
    Chart piechart1 = new Chart();

    piechart.drawPieChart(data);
    piechart.drawPieChart(data1);

    // Determine if the labels were correctly placed
    assertEquals(true, pieChart.drawLabels());
    assertEquals(false, pieChart1.drawLabels());
}